<body>
 <main class="mb-auto">
  <div class="container">
   <div class="row">
    <div class="col-md-3">
     <%= render "users/user_info", user: @user %>

    </div>

    <div class="col-md-8 offset-md-1 bg-light text-center">

      <h2>ユーザープロフィール</h2>

      <div>
      <!--画像が添付されていなくてもエラーが出ないようにする記述-->
      <% if @user.image.attached? %>
        <%= image_tag @user.image.variant(resize: '200x200' )  %>
      <% end %>
      </div>

        <!--ユーザーに対応した属性タイプのアイコンを表示させる記述-->
        <%= image_tag @body_type.image.variant(resize: '50x50' )  %>

      <div>
      <%= @user.name %>
      </div>
      <div>
        <%= @user.body_type.name %>
      </div>
      <div>
      <%= @user.introduction %>
      </div>

      <div>
        <% if @user.id == current_user.id %>
        <% else %>
          <% if current_user.following?(@user) %>
          <%= link_to "フォローを外す", user_relationships_path(@user.id), method: :delete %>
          <% else %>
            <%= link_to "フォローする", user_relationships_path(@user.id), method: :post %>
          <% end %>
        <%end %>
      </div>
      <br />

      <div>
      属性タイプ：  <%= @user.body_type.name %>
      </div>

      <div>
      年齢：        <%= @user.age %>
      </div>

      <div>
      身長：        <%= @user.height %>
      </div>

      <div>
      体重：        <%= @user.weight %>
      </div>

      <div>
      体脂肪率：    <%= @user.fat_percentage %>
      </div>

      <div>
      運動頻度：    <%= @user.exercise_frequency %>
      </div>

      <div>
      居住エリア：  <%= @user.living_area %>
      </div>

      <% if @user.id == current_user.id %>
      <%= link_to "プロフィール編集", edit_user_path(@user.id) %>
      <% end %>





    </div>
   </div>
  </div>
 </main>

</body>