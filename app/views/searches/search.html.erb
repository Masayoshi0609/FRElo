<main>
  <div class="container">
    <div class="row">
      <div class="col-md-8 offset-md-1">

        <table class="table table-hover table-inverse">

          <% if @range == "2" %>
            <h3>"<%= @word %>"に関するつぶやき</h3>
            <thead>
            <tr>
            <th></th>
            <th>つぶやきの内容</th>
            <th colspan="3"></th>
            </tr>
            </thead>

            <tbody>
              <% @post.each do |post| %>
            <tr>
            <td>
              <%= link_to(post.user) do %>
                <% if post.user.image.attached? %>
                  <%= image_tag post.user.image.variant(resize: '100x100' )  %>
                <% end %>
                <%= post.user.name %>
              <% end %>
            </td>

            <td><%= post.body %></td>
            </tr>
            <% end %>

            </tbody>

          <% else %>
            <h3>Users serch for"<%= @word %>"</h3>
            <thead>
            <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
            </tr>
            </thead>

          <tbody>
            <% @user.each do |user| %>
            <tr>
            <td>
              <% if user.image.attached? %>
                <%= image_tag user.image.variant(resize: '100x100' )  %>
              <% end %>
            </td>
            <td><%= user.name%></td>
            <td><%= link_to "ユーザーページ", user, class: "user_#{user.id}" %></td>
            </tr>
            <% end %>
          </tbody>
          <% end %>
        </table>
</div>
</div>
</div>
</main